<h1>Hello, Rails!</h1>

<%= link_to 'New article', new_article_path %> </br>


<table>
  <tr>
    <th>Title</th>
    <th>description</th>
    <th colspan="2"></th>
  </tr>

  <% @articles.each do |article| %>
  <tr>
      <td><%= article.title %></td>
      <td><%= article.description %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
  </tr>
  <% end %>
</table>    